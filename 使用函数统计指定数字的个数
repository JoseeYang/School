#include <stdio.h>

int CountDigit( int number, int digit );

int main()
{
    int number, digit;

    scanf("%d %d", &number, &digit);
    printf("Number of digit %d in %d: %d\n", digit, number, CountDigit(number, digit));

    return 0;
}

/*ÄãµÄ´úÂë»á±»ÏâÇ¶ÔÚÕâÀï*/ 
int CountDigit( int number, int digit )
{
	int back = 0;
	int  now;
	
	if(number < 0)
	number = -number;
	for( ; number >= 10 ;number = number / 10 ){
		
		now = number % 10;
		if( now == digit)
			back++;
	}
	if(number == digit)
		back++;
		
	return back;
}
